<div class="page-header">
  <h1>Pictures</h1>
</div>

<p><%= link_to 'Add a New Picture', new_picture_url, class: 'btn btn-primary' %></p>

<%= paginate @pictures %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Caption</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image_url, :width => 200 %></td>
        <td><%= picture.caption %></td>
        <td><%= picture.user.full_name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, picture_url(picture), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_picture_url(picture), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, picture_url(picture), method: 'delete', data: { confirm: "Do you really want to delete this picture?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

