<div class="page-header">
  <h1>Editing Picture #<%= @picture.id %></h1>
</div>

<%= form_tag(picture_url(@picture), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :image_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= url_field_tag :image_url, @picture.image_url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :caption, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :caption, @picture.caption, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name, @picture.user_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Picture", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
