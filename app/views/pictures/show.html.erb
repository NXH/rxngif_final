<div class="page-header">
  <h1>Picture #<%= @picture.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image</dt>
  <dd><%= image_tag @picture.image_url, :width => 400 %></dd>

  <dt>Caption</dt>
  <dd><%= @picture.caption %></dd>

  <dt>User</dt>
  <dd><%= @picture.user.full_name %></dd>

</dl>
